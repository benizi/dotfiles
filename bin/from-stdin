#!/usr/bin/perl
use strict;
use warnings;
use File::Temp 'tempfile';
use IPC::Run 'run';
my $STDIN = \0;
unless (@ARGV) {
   if ($0 =~ /links-dump-stdin/) {
      @ARGV = ('links', '-dump', 'STDIN') 
   } elsif ($0 =~ /antiword-/) {
      @ARGV = ('antiword', 'STDIN');
   }
}
my @cmd = map {
   /^STDIN$/ ? $STDIN
   : $_
} @ARGV;
@cmd or die "Need a command or something\n";
if (grep $_ eq $STDIN, @cmd) {
   my ($fh, $filename) = tempfile;
   print $fh <STDIN>;
   close $fh;
   @cmd = map $_ eq $STDIN ? $filename : $_, @cmd;
}
run [@cmd];
