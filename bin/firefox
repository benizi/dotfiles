#!/bin/zsh
kill=false
debugging=true
unset found_rspec
pst -P $$ | while read line ; do
  [[ $line = */rspec* ]] || continue
  print -l - $line | read pid rest
  found_rspec=$pid
done
if (( ! $+SELENIUM_POPUP )) && (( $+found_rspec )) ; then
  if $kill ; then
    kill -9 $found_rspec
    exit 1
  fi
  screen-detached -xvfb Xvfb :1 -screen 0 1920x1080x24
  export DISPLAY=:1
  x-is-active -maxtry 10 -v || exit 1
fi
if $debugging ; then
  date >> ~/firefox.log
  for arg ; do
    printf "%s\n" $arg >> ~/firefox.log
  done
  pst $$ >> ~/firefox.log
fi
newpath=()
for p in $path ; do
  [[ $p = $0:h ]] && continue
  newpath+=( $p )
done
path=( $newpath )
exec firefox "$@"
