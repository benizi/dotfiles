#!/bin/zsh
dev=$(xinput list | awk -F= '/Synaptics/ { print $2 }' | awk '{ print $1 }')
if [ -z "$dev" ] ; then
	exit
fi
typeset -A props
xinput list-props $dev | while read line ; do
	[[ $line = *\([[:digit:]]*\):* ]] || continue
	name=${line%\ \(*}
	id=${line#*\(}
	id=${id%\)*}
	props+=( $name $id )
done
prop () {
	(( $+props[$1] )) && xinput set-prop $dev $props[$1] ${@:2}
}
prop 'Synaptics Finger' 10 15 256
prop 'Synaptics Tap Action' 0 0 0 0 1 3 2
prop 'Synaptics Two-Finger Scrolling' 1 1
prop 'Synaptics Scrolling Distance' 111 50
