#!/bin/sh
{
  tmux ls -F '#S' 2>/dev/null || true
  hash mux 2>/dev/null && mux completions start | sed 's!$!:mux!'
} |
awk -F: '!seen[$1]++ || $NF != "mux"' |
dmenu |
while read session
do
  case "$session" in
    ('') true ;;
    (*:mux) ensure-in-term mux start "${session%:mux}" ;;
    (*) ensure-in-term tm "$session"
  esac
done
