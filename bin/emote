#!/bin/sh
hash clip 2>/dev/null && ! test -p /dev/stdout && cmd=clip || cmd=cat
chosen="$(cat <<EMOJI | picker -p 'emoticon: '
(╯°□°)╯︵ ┻━┻ - table flip
¯\_(ツ)_/¯ - shrug
(ﾉಥ益ಥ）ﾉ ┻━┻ - table flip - angry
EMOJI
)"
chosen="${chosen%%' - '*}"
if test -n "$chosen"
then printf '%s\n' "$chosen" | $cmd
fi
