#!/bin/sh

set -e

die() {
  printf '%s\n' "$*" >&2
  exit 1
}

default_kak_session() {
  basename "${dir:-$(pwd)}" |
  tr . _
}

while test $# -gt 0
do
  case "$1" in
    (kak=*) kak=${1#*=} ;;
    (sess=*) sess=${1#*=} ;;
    (dir=*) dir=${1#*=} ;;
    (--tabs) open_in_tabs=true ;;
    (*)
      if test -d "$1"
      then
        test -z "$dir" || die "dir specified twice?: $dir (and $1)"
        dir=$1
      elif test -e "$1"
      then
        test -n "$dir" || case "$1" in
          (*/./*) dir="${1%%/./*}" relfile=${1#*/./} ;;
          (*/*) dir="$(dirname "$1")" relfile="$(basename "$1")" ;;
        esac

        if test -n "$relfile"
        then
          shift
          set -- "$relfile" "$@"
        fi

        break
      else
        break
      fi
      ;;
  esac
  shift
done

test -z "$dir" || dir="$(realpath "$dir")"
test -z "$dir" || cd "$dir"

: ${dir="$(pwd)"}
: ${kak="$(default_kak_session)"}
: ${sess="kak-$kak"}
: ${open_in_tabs=false}

if $open_in_tabs
then
  sed 's/^/tmux-terminal-window kak -c '${kak}' /' |
  kak -p "$kak"
  exit $?
fi

if test -z "$TMUX"
then
  case $# in
    (0) just_attach=true ;;
    (*) just_attach=false ;;
  esac

  set -- "$0" "kak=$kak" "sess=$sess" "dir=$dir" "$@"
  if tmux has-session -t "=$sess" 2> /dev/null
  then
    $just_attach || tmux new-window -c "$dir" -t "=$sess" "$@"
    exec tmux attach-session -t "=$sess"
  else
    exec tmux new-session -A -c "$dir" -s "$sess" "$@"
  fi

  ret=$?
  case "$ret" in
    (0) exit ;;
    (*) die "Failed to start or attach to tmux session \`$sess\`: rc=$ret" ;;
  esac
fi

kak -clear || :
kak -l | grep -qFx "$kak" || kak -d -s "$kak"
kak -c "$kak" "$@"
