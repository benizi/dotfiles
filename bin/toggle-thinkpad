#!/bin/zsh

devices=(
  $(xinput list |
    awk -F= '/Trackpad.*pointer/ || /AT.*keyboard.*keyboard/ { print $2 }' |
    awk '{ print $1 }')
)

any_enabled=0
for device in $devices ; do
  enabled=$(xinput list-props $device | awk '/Device Enabled/ { print $NF }')
  (( any_enabled += enabled ))
done

(( any_enabled )) && action=disable || action=enable

for device in $devices ; do
  xinput $action $device
done
