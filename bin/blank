#!/bin/sh
: ${state=suspend}

for arg
do case "$arg" in (--standby|--suspend|--off|--on) state=${arg#--} ;; esac
done

blank="xset dpms force $state"
test $# -gt 0 || set -- -

local_blank() {
  # wait for keypresses to clear
  sleep 1
  $blank
}

ssh_blank() {
  test -n "$SSH_AGENT_PID" || . ~/ssh-script
  ssh "$1" "DISPLAY=:0 $blank"
}

for host
do
  case "$host" in
    (--*) : ignore arg ;;
    (-) local_blank ;;
    (*) ssh_blank "$host" ;;
  esac
done
