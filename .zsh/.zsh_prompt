setopt promptsubst
PSC=GREEN
PSCB=BOLD
PSCR=GOLD
PSCRB=
export PROMPT='%{%(!.${(P)PSCRB}${(P)PSCR}.${(P)PSCB}${(P)PSC})%}%n@%m %~%(!.#.$)%{${NOCOLOR}%} '
export PS1
function preexec () {
	COMMAND="$1"
	[[ $SHLVL -gt 1 ]] && [[ -z "$NOTITLE" ]] && print -nP '${TITLE}'$1:q:gs/%/%%/:gs/\$/\\\\\$/' │ %(!.ROOT │ .)%m │ %~ │ %n${STY+ │ $$}${ENDTITLE}'
}
function precmd () {
	[[ $SHLVL -gt 1 ]] && [[ -z "$NOTITLE" ]] && print -nP '${TITLE}%(!.ROOT │ .)%m │ %~ │ %n${STY+ │ $$}${ENDTITLE}'
}
