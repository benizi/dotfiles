path=( ~/bin/lvmstuff $path ~/obfu /opt/google-web-toolkit )
export PERL5LIB=$PERL5LIB:$HOME/Usable/testing/lib
export PRINTER=pdf

# ConTeXt-related shit
function () {

local HOME=/home/bhaskell
unset TEXMFCNF TEXMFCACHE OSFONTDIR LUAINPUTS LUATEXDIR
unset CTXMINIMAL TEXROOT TEXMFOS
oldpath=( $path )
path=()
for p in $oldpath ; do [[ $p = *context* ]] || path+=( $p ) ; done

if [[ z$CTX_OPTION = zOLD ]] ; then
    # mostly from http://www.ntg.nl/pipermail/ntg-context/2009/040048.html
    export TEXMFCNF=/usr/share/texmf/web2c
    export TEXMFCACHE=$HOME/texmf
    export OSFONTDIR=/usr/share/fonts
    export LUAINPUTS='{/usr/share/texmf-dist/tex/context/base,/usr/share/texmf-dist/scripts/context/lua}'
    export LUATEXDIR=/usr/share/texmf-dist/scripts/context/lua
elif [[ z$CTX_OPTION = zNONE ]] ; then
else
    export CTXMINIMAL=yes
    export TEXROOT=$HOME/context/tex
    export TEXMFCACHE=$TEXROOT/texmf-cache
    export TEXMFOS=$TEXROOT/texmf-linux-64
    export OSFONTDIR="{$HOME/.fonts,/usr/share/fonts}"
    path=( ~/context/{tex/texmf-linux-64/,}bin $path )
fi
}
