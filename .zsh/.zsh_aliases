'find' () {
  integer i=${argv[(i)-*]}
  (( $+INOSX && ! $#argv )) && [[ $0 = find ]] && argv=( . )
  command $0 ${~argv[1,i-1]} "${(@)argv[i,-1]}"
}

'ack'() {
  local -i i
  for (( i=1; i<$#argv; i++ )) ; do
    [[ $argv[i] == -* ]] && continue
    break
  done
  ((i++))
  command $0 "${(@)argv[1,i-1]}" ${~argv[i,-1]}
}

