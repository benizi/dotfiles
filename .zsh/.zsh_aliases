() {
local dir
local -a target
for dir in ${^zsh_dirs}/(#i)[[:alpha:]]*(N@-/) ; do
  [[ -e $dir ]] || continue
  target=( $dir(+A) )
  (( $#target )) || continue
  hash -d ${dir:t}=$target[1]
