be cap () {
	local dir=$PWD
	local -a bundle
	bundle=()
	while true ; do
		[[ -f $dir/Gemfile ]] && bundle=( bundle exec ) && break
		[[ $dir = / ]] && break
		dir=$dir:h
	done
	[[ $0 == be ]] || bundle+=( $0 )
	command $bundle "$@"
}

