function update_zsh_aliases () {
	# TODO add some check for freshness, then run by default
	if which svn >/dev/null 2>/dev/null && ! svn status .zsh_aliases 2> /dev/null
	then svn export ssh+svn://benizi.com/home/bhaskell/svnrepo/.zsh_aliases ~/.zsh_aliases
	else (cd ~ && wget -N http://benizi.com/svnrepo/.zsh_aliases)
	fi
}
# keep some builtins out of history
alias fg=' builtin fg'
alias bg=' builtin bg'
alias rehash=' builtin rehash'

alias bash='HISTFILE=~/.bash_history bash'

alias fcl='fc -nidl 0 | less'
local lscolor
if [ -n "$INBSD" ] ; then lscolor="ls" ; else lscolor="ls --color=auto" ; fi
alias l="$lscolor -trl"
alias ll="$lscolor -trlL"
alias lll="$lscolor -trl | less"
alias la="$lscolor -trlA"
alias lsd="$lscolor -trld"
alias lsda="$lscolor -trldA"
alias lso="$lscolor -tlA"
alias lss="$lscolor -Srl"
alias lsr="$lscolor -Sl"
alias pf='ps -ef'
alias pfg='ps -ef | grep'
alias lsl=l
alias pine='titlep PINE ; command alpine -bail -p $PINERC'
alias alpine='titlep PINE ; alpine-svn -bail -p $PINERC'
