hash_if_exist () {
	local arg name dir remove=false
	unset name
	unset dir
	for arg ; do
		case $arg in
			-r) remove=true ;;
			*)
				if (( ! $+name )) ; then
					name=$arg
				elif (( ! $+dir )) ; then
					dir=$arg
				fi
				;;
		esac
	done
	if [[ -d $dir ]] ; then
		hash -d $name=$dir
	elif $remove ; then
		hash -d $name=
	fi
}
