vimrecover () {
	local l s
	local -A swapped
	for l in ~/.vim-tmp/%*.sw?(N.) ; do
		s=${l:t:r:gs.[%]./.}
		pid=$(perl -Mbytes -nwe 'BEGIN { $/ = \2; } print unpack s => $_ if 13..13' $l)
		kill -0 $pid 2>/dev/null && continue
		(( $+swapped[$s] )) && continue
		[[ -d $s ]] && continue
		[[ -e $s ]] || continue
		v +'map q :qa<CR>' $s || break
		swapped+=( $s 1 )
	done
}

