if false && [ "$USER" = "bhaskell" ] ; then
  if which flock >/dev/null 2>/dev/null
  then svn=(flock --timeout=1 ~/.svn-lock svn)
  else svn=(svn)
  fi
  pushd ~
  if perl -lwe 'exit(4*60*60 > (stat ".historyfile")[9]-(stat ".svn/entries")[9] and 1000 > `svn diff .historyfile | LC_ALL=C wc -l`)' ; then
    if time-limit ping -c 1 benizi.com >& /dev/null ; then
      if [ ! -f .svn/lock ] ; then
        echo -e "SVN checking in .historyfile...\c"
        if $svn ci -m automatic .historyfile >/dev/null 2>/dev/null
        then echo "Done"
        else echo "Failed!"
        fi
      fi
    else echo No network connection to benizi.com
    fi
  fi
  popd
fi
