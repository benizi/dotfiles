local dir
local -a target
(( $+parameters[namedirs] )) || local -a namedirs
namedirs=( ${^zsh_dirs}/{,.}namedir(N/) )
if (( ! $#namedirs )) ; then
  if (( ! $#argv )) ; then
    printf 'No namedir found in:\n' >&2
    printf '  %s\n' ${^zsh_dirs} >&2
  fi
  return 1
fi
for dir in ${^namedirs}/*(N@-/) ; do
  [[ -e $dir ]] || continue
  target=( $dir(:A) )
  (( $#target )) || continue
  hash -d ${dir:t}=$target[1]
done
