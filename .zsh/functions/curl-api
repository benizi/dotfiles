local -a opts
local token=$(curl-api-file token) urlfile=$(curl-api-file url) optsfile=$(curl-api-file opts)
[[ -f $token ]] && opts+=( -H "X-Forever-Authorization: $(<$token)" )
[[ -f $urlfile ]] || { warn "Need $urlfile" ; return 1 }
if [[ -f $urlfile ]] && [[ $1 = /* ]] ; then
  local url=$(<$urlfile)$1
  shift
  opts+=( $url )
fi
[[ -f $optsfile ]] && opts+=( $(<$optsfile) )
curl-json $opts "$@"
