local -a opts
local env=${api_env+.$api_env}
[[ -f api.token$env ]] && opts+=( -H "X-Forever-Authorization: $(<api.token$env)" )
[[ -f api.url$env ]] || { warn "Need api.url$env" ; return 1 }
if [[ -f api.url$env ]] && [[ $1 = /* ]] ; then
  local url=$(<api.url$env)$1
  shift
  opts+=( $url )
fi
[[ -f api.opts$env ]] && opts+=( $(<api.opts$env) )
curl-json $opts "$@"
