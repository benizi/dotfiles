function wlan-replug () { wlan-remove ; wlan-insert }
function wlan-remove () { modprobe --remove ipw2200 ieee80211_crypt{_tkip,_ccmp,_wep,} }
function wlan-insert () { modprobe ipw2200 }
function wlan-linksys () {
	iwconfig wlan mode monitor
	iwconfig wlan mode managed
	iwconfig wlan ap 00:14:bf:28:8a:29
	iwconfig wlan essid linksys
}
function wlan-RESET () { wlan-replug ; wlan-linksys }
function wlan-scan () { iwlist wlan scan }
function video-restore () { vbetool vbestate restore < /root/console.vbestate }
function dlink-remove () {
	ex=()
	for l in wlan_tkip wlan_ccmp ; do
		lsmod | grep -q $l && ex=($ex $l)
	done
	modprobe --remove $ex ath_pci wlan_scan_sta ath_rate_sample ath_hal wlan_scan_ap wlan_wep wlan
}
function dlink-insert () { for l in wlan ath_pci ath_hal ; modprobe $l }
function dlink-replug () { dlink-remove ; dlink-insert }
function setup-wordnet-cvs () {
	export CVSROOT=remind.princeton.edu:/usr/local/cvsroot
	export CVS_RSH=ssh
	export CVS_SERVER=/usr/csl/bin/cvs
}
function xhost-it-up () {
	for host in acer averatec ; do
		ssh $host DISPLAY=:0 xhost +$(hostname -f)
	done
}
